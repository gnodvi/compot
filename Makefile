# -*-   mode: makefile ; coding: koi8   -*- ------------------------------------
#
#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------

all:  
	(cd ext;   make)
	(cd src/m; make)

test:  
	(cd ext; make test)
	T.sh

#--------------------------------------------

clean:  
	(cd ext;   make clean)
	(cd src/m; make clean)

cleanall:  clean
	(cd ext;   make cleanall)

#--------------------------------------------
MIN = ../compot_min

savemin:
	mkdir  -p   $(MIN)
	mkdir  -p   $(MIN)/src
	cp -r ./P   $(MIN)
	cp -r ./src/common/ $(MIN)/src/
	cp -r ./P   $(MIN)
	cp -r ./Makefile $(MIN)
	cp -r ./Make.mak $(MIN)

#-------------------------------------------------------------------------------
