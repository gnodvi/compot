# -*-   mode: makefile ; coding: koi8   -*- ------------------------------------
#
#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------

all:  
	(cd freeglut; make)
	(cd   jimtcl; make)
	(cd metamath; make)

#-------------------------------------------------------------------------------

clean:  
	(cd freeglut; make clean)
	(cd   jimtcl; make clean)
	(cd metamath; make clean)

cleanall:  
	(cd freeglut; make -i cleanall)
	(cd   jimtcl; make -i cleanall)
	(cd metamath; make -i cleanall)

#-------------------------------------------------------------------------------

test:  
	(cd   jimtcl; make test)

#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------
