#-------------------------------------------------------------------------------

#MAIN_SRC_DIR = .

include ../../Make.mak



JIMTCL_DIR = ../jimtcl		
OLDJOY_DIR = ../oldjoy		
RANDOM_DIR = ../random		

#-------------------------------------------------------------------------------


all:  OLDJOY__ JIMTCL__ RANDOM__   

#-------------------------------------------------------------------------------

OLDJOY__ :
	(cd $(OLDJOY_DIR); make)

JIMTCL__ :
	(cd $(JIMTCL_DIR); make)

RANDOM__ :
	(cd $(RANDOM_DIR); make)

#-------------------------------------------------------------------------------
test:
	M

#-------------------------------------------------------------------------------

clean : 
	(cd $(OLDJOY_DIR); make clean)
	(cd $(JIMTCL_DIR); make clean)
	(cd $(RANDOM_DIR); make clean)

#-------------------------------------------------------------------------------
