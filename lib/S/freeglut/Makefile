REL = 3.2.2

NAME = freeglut-$(REL)


#--------------------------------------------

all:  
	./I

#--------------------------------------------
get:
	#(export https_proxy=http://127.0.0.1:3128 ; cd A; wget  https://github.com/FreeGLUTProject/freeglut/releases/download/v$(REL)/$(NAME).tar.gz)
	(cd A;  gzip -d  $(NAME).tar.gz; tar xvf $(NAME).tar)

#--------------------------------------------

clean:  

	rm -fR ./R
#	rm -fR ./$(NAME)
	rm -f cmake
	rm -f make_install


