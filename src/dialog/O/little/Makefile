
#-------------------------------------------------------------------------------

MOC = moc

GCC = LANG=C  gcc -x c

#-------------------------------------------------------------------------------
PROGS = little_black #qtsimp1

all: $(PROGS)

#-------------------------------------------------------------------------------

little_black: little_black.c
	$(GCC) $^  -o $@ -lX11

#-------------------------------------------------------------------------------

#QTDIR = /usr/lib/qt-2.2.0 
#QINCS = -I$(QTDIR)/include -I$(X_DIR)/include

QINCS = -I/usr/include/qt4 -I$(X_DIR)/include
#QLIBS = -L$(QTDIR)/lib -L$(X_DIR)/lib -lqt -lX11 -lXext -lm


#-------------------------------------------------------------------------------

qtsimp1: qtsimp1.cc
	$(MOC) qtsimp1.cc -o qtsimp1.moc
	g++  -o qtsimp1 qtsimp1.cc $(QINCS) $(QLIBS) 

#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------

clean :
	rm -f T/*.o $(PROGS)

#-------------------------------------------------------------------------------

