
#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------

ORIGIN_DIR = ../origin

RECOGN_DIR = ../recogn

SROBOT_DIR = ../srobot

#-------------------------------------------------------------------------------


all:  RECOGN__ SROBOT__ ORIGIN__ 

#-------------------------------------------------------------------------------

ORIGIN__ :
	(cd $(ORIGIN_DIR); make)

RECOGN__ :
	(cd $(RECOGN_DIR); make)

SROBOT__ :
	(cd $(SROBOT_DIR); make)

#-------------------------------------------------------------------------------

clean : 
	(cd $(ORIGIN_DIR); make clean)
	(cd $(RECOGN_DIR); make clean)
	(cd $(SROBOT_DIR); make clean)

#-------------------------------------------------------------------------------
#-------------------------------------------------------------------------------
